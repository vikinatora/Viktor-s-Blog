@model HomeViewModel
<!-- Page Content -->
<div class="container">
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">
            @Html.DisplayFor(m => m.Posts)
        </div>

        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <form class="input-group" method="get" asp-controller="search" asp-action="search">
                    <input type="text" class="form-control" name="searchTerm">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </form>
            </div>

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            @Html.DisplayFor(m => m.Categories)
                        </ul>
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination col-lg-pull-4">
        @for (int i = 1; i <= Model.BlogPages; i++)
        {
            if (Context.Request.Query.ContainsKey("categoryFilter"))
            {
                if (Model.Page == i)
                {

                    <li class="page-item active"><a class="page-link" asp-controller="home" asp-action="index" asp-route-id="@i" asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-controller="home" asp-action="index" asp-route-id="@i" asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]">@i</a></li>
                }
            }
            else
            {
                if (Model.Page == i)
                {

                    <li class="page-item active"><a class="page-link" asp-controller="home" asp-action="index" asp-route-id="@i" asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-controller="home" asp-action="index" asp-route-id="@i" asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]">@i</a></li>
                }
            }
        }
    </ul>
</nav>



