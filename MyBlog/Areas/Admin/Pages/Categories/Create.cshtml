@page
@model MyBlog.Areas.Admin.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form asp-page-handler="Create" method="post" class="form-horizontal">
    @Html.FormGroupFor(model => model.Name)
    @Html.FormGroupFor(model=>model.BannerUrl)

    <div class="form-group">
        <div class=" col-sm-10 col-sm-push-2">
            <input type="submit" value="Create category" class="btn btn-success" />
            <a asp-area="" asp-controller="home" asp-action="index">Cancel</a>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
